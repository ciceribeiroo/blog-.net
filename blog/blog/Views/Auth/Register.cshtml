@model RegisterViewModel

@{

}
<style>
    body{
        overflow-y: hidden;
    }
</style>
<div class="capa">
    <figure class="size-4">
        <img src="~/content/static/capa2.jpg" />
        <form class="sign-in-form" asp-controller="Auth" asp-action="Register" method="post">
            <div class="campo">
                <input asp-for="Email" placeholder="E-mail" />
                <span asp-validation-for="Email"> </span>
            </div>
            <div class="campo">
                <input asp-for="Password" placeholder="Senha"/>
                <span asp-validation-for="Password"> </span>
            </div>
            <div class="campo">
                <input asp-for="ConfirmPassword" placeholder="Confirme sua senha"/>
                <span asp-validation-for="ConfirmPassword"> </span>
            </div>
            <div>
                <input class="botao" type="submit" value="Registrar" /></br>
                <p class="registrar">Já tem uma conta?<a asp-controller="Auth" asp-action="Login">Entrar</a></p>
            </div>
        </form>
    </figure>
</div>