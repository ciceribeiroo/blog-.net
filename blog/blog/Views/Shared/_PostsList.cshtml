@model IEnumerable<Post>

<style>
    th, td {
        padding: 0.25rem;
    }

    th {
        text-align: left;
    }
    /* The Modal (background) */
    .modal {
        display: none; /* Hidden by default */
        position: fixed; /* Stay in place */
        z-index: 1; /* Sit on top */
        left: 0;
        top: 0;
        max-width: 100%; /* Full width */
        max-height: 100%; /* Full height */
        overflow: auto; /* Enable scroll if needed */
        background-color: rgb(0,0,0); /* Fallback color */
        background-color: rgba(0,0,0,0.4); /* Black w/ opacity */
    }

    /* Modal Content/Box */
    .modal-content {
        background-color: #fefefe;
        margin: 15% auto; /* 15% from the top and centered */
        padding: 20px;
        max-width: 80%; /* Could be more or less, depending on screen size */
    }

    /* The Close Button */
    .close {
        margin-top: 8rem;
        margin-right: 3rem;
        color: #aaa;
        font-size: 28px;
        font-weight: bold;
    }

        .close:hover,
        .close:focus {
            color: black;
            text-decoration: none;
            cursor: pointer;
        }
    .remover:focus, .remover:hover {
        cursor: pointer !important;
    }
</style>
<table width="100%" class="tabela-web">
    <thead>
        <tr>
            <th>Titulo</th>
            <th>Resumo</th>
            <th>Data</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var post in Model)
        {
            <tr>
                <td>@post.Title</td>
                <td>@post.Description</td>
                <td>@post.Created</td>
                <td>
                    <a class="sublinhado" asp-controller="Panel" asp-action="Edit" asp-route-id="@post.id">
                        Editar
                    </a>
                    -
                    <a id="myBtn" class="sublinhado remover">Remover</a>
                    <div id="myModal" class="modal">
                        <div class="modal-content">
                            <p>Some text in the Modal..</p>
                            <a class="sublinhado" asp-controller="Panel" asp-action="Remove" asp-route-id="@post.id">
                                Remover
                            </a>
                            <a href=""><span class="close">&times;</span></a>
                        </div>

                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
<table width="100%" class="tabela-mobile">
    <thead>
        <tr>
            <th>Titulo</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var post in Model)
        {
            <tr>
                <td>@post.Title</td>
                <td>
                    <a class="sublinhado" asp-controller="Panel" asp-action="Edit" asp-route-id="@post.id">
                        Editar
                    </a>
                    -
                    <a id="myBtn" class="sublinhado remover">Remover</a>
                    <div id="myModal" class="modal">
                        <div class="modal-content">
                            <p>Some text in the Modal..</p>
                            <a class="sublinhado" asp-controller="Panel" asp-action="Remove" asp-route-id="@post.id">
                                Remover
                            </a>
                            <a href=""><span class="close">&times;</span></a>
                        </div>

                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
<script>
    // Get the modal
    var modal = document.getElementById("myModal");

    // Get the button that opens the modal
    var btn = document.getElementById("myBtn");

    // Get the <span> element that closes the modal
    var span = document.getElementsByClassName("close")[0];

    // When the user clicks on the button, open the modal
    btn.onclick = function () {
        modal.style.display = "block";
    }

    // When the user clicks on <span> (x), close the modal
    span.onclick = function () {
        modal.style.display = "none";
    }

    // When the user clicks anywhere outside of the modal, close it
    window.onclick = function (event) {
        if (event.target == modal) {
            modal.style.display = "none";
        }
    }
</script>