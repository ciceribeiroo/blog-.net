<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale-1.0" />
    <title>@ViewBag.Title</title>
    <meta name="description" content="@ViewBag.Description" />
    <meta name="keywords" content="@ViewBag.Keywords" />
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/css/--debug.css" rel="stylesheet" />
    <link href="~/css/home.css" rel="stylesheet" />
    <link href="~/css/img.css" rel="stylesheet" />
    <link href="~/css/modal.css" rel="stylesheet" />
    <link href="~/css/navbar.css" rel="stylesheet" />
    <link href="~/css/progress-bar.css" rel="stylesheet" />
    <link href="~/css/reset.css" rel="stylesheet" />
    <link href="~/css/style.css" rel="stylesheet" />
    <link href="~/css/text.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Rozha+One&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Lato&display=swap" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://kit.fontawesome.com/7ed9007b85.js" crossorigin="anonymous"></script>
    <link href="~/lib/Trumbowyg-master/dist/ui/trumbowyg.css" rel="stylesheet" />
</head>
<body>
    <div>
        <nav>
            <div class="logo">
                <h4>{ a }</h4>
            </div>
            <ul class="nav-links">
                <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                @if (User.Identity.IsAuthenticated)
                {
                    if (User.IsInRole("admin"))
                    {
                        <li><a asp-controller="Panel" asp-action="Index">Admin Panel</a></li>
                    }
                    <li><a asp-controller="Auth" asp-action="Logout">Logout</a></li>
                }
                else
                {
                    <li><a asp-controller="Auth" asp-action="Login">Sign In</a></li>
                }
            </ul>
            <div class="burguer">
                <div class="line1"></div>
                <div class="line2"></div>
                <div class="line3"></div>
            </div>
        </nav>
    </div>
    <div>
        @RenderBody()
    </div>
    @RenderSection("scripts", false)
    <script src="~/lib/nav.js"></script>
</body>
</html>