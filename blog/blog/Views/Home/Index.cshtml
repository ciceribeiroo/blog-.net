@model IndexViewModel

@{
    ViewBag.Title = "Blog Website";
    ViewBag.Description = "hello word";
    ViewBag.Keywords = "blog programming travel photography";
}
<style>
    .paginas {
        display: flex;
        flex-direction: row;
        justify-content: center;
        margin: 2rem;
    }

        .paginas a {
            padding: 1rem;
            background-color: #aaa;
            color: white;
            text-decoration: none;
            padding: 0.5rem 0.75rem;
        }
        .paginas a:hover {
            background-color: #999;
            text-decoration: none;
        }
    .pesquisa {
        display: flex !important;
        flex-direction: column !important;
        align-items: center !important;
        justify-content: center !important;
    }
</style>

<div class="main-image">
    <span class="title">Amazing Blog Site</span>
    <form asp-controller="Home" asp-action="Index" method="get">
        <input type="hidden" name="pageNumber" value="@Model.PageNumber"/>
        <input type="hidden" name="category" value="@Model.Category"/>
        <div style="width: 100%"><input class="pesquisa" type="text" name="search" value="@Model.Search" placeholder="Search" /></div>
        <button class="submit-btn">Search</button>
    </form>
</div>
<div class="my-container">
    @foreach (var post in Model.Posts)
    {
        var img_path = $"/Image/{post.Image}";
        <a class="post" asp-controller="Home" asp-action="Post" asp-route-id="@post.id">
            <img src="@img_path" />
            <span class="title">@post.Title</span>
        </a>

    }
    <partial name="_BlogPagination" model="Model" />
</div>